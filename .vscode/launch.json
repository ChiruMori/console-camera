  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Capturer (MinGW)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/output/console-camera.exe",
      "args": [
        "output/capture",
        "32e4:9415",
        "3840",
        "2160"
      ],
      "preLaunchTask": "build console-camera",
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb.exe",
      "targetArchitecture": "x64",
      "logging": {
        "engineLogging": true,
        "trace": true,
        "traceResponse": true
      },
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "将反汇编风格设置为 Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
